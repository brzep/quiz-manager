<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="131.0" prefWidth="406.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizmanager.presenter.AddPrizePresenter">
    <center>
        <GridPane hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0"/>
                <RowConstraints minHeight="10.0"/>
                <RowConstraints minHeight="10.0"/>
            </rowConstraints>
            <Label text="Prize Name">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Prize Description" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Prize Type" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Label>
            <TextField fx:id="prizeName" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </TextField>
            <TextField fx:id="prizeDescription" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </TextField>
            <ChoiceBox fx:id="prizeType" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </ChoiceBox>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button  mnemonicParsing="false" onAction="#handleCancelAction" prefWidth="60.0" text="Cancel">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddAction" prefWidth="60.0" text="Add">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</BorderPane>
