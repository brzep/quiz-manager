<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Box?>
<BorderPane fx:id="root" prefHeight="50.0" prefWidth="276.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizmanager.presenter.AddPrizeTypePresenter">

    <top>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
            <TextField fx:id="prizeTypeName" promptText="Nowa kategoria" minWidth="200.0" />
            <Button fx:id="addPrizeTypeButton" onAction="#addPrizeType" text="Dodaj">
            </Button>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <ListView fx:id="currentCategories" minWidth="300" minHeight="500"/>
        </HBox>


    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button  mnemonicParsing="false" onAction="#handleCancelAction" prefWidth="60.0" text="Cancel">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#handleAcceptAction" prefWidth="60.0" text="OK">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</BorderPane>