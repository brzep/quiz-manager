<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="quizmanager.presenter.QuizView">

    <left>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <children>
                <ListView fx:id="quizTitles" maxHeight="1.7976931348623157E308" style="-fx-background-radius: 5;"
                          VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </ListView>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addQuiz" text="Dodaj Quiz"
                        GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPrize"
                        text="Dodaj nagrodę" GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPrizeType"
                        text="Dodaj kategorię nagrody" GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </VBox>


    </left>
    <center>
        <TableView fx:id="quizDetailsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nickname" prefWidth="75.0" text="Pseudonim"/>
                <TableColumn fx:id="score" prefWidth="75.0" text="Liczba poprawnych&#10;&#9;odpowiedzi&#10;"/>
                <TableColumn fx:id="startTimestamp" prefWidth="75.0" text="Timestamp - Start"/>
                <TableColumn fx:id="endTimestamp" prefWidth="75.0" text="Timestamp - End"/>
                <TableColumn fx:id="prize" prefWidth="75.0" text="Nagroda"/>
                <TableColumn fx:id="prizeChangeButton" prefWidth="75.0" text="Zmień nagrodę" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <children>
                <Button fx:id="configButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#configureStrategy" text="Konfiguruj strategię"
                        GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="exportPdf" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#exportPdf" text="Wyeksportuj do pdf"
                        GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="exportXlsx" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#exportXlsx" text="Wyeksportuj do xlsx"
                        GridPane.rowIndex="1">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </VBox>
    </right>

</BorderPane>
