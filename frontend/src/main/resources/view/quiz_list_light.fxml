<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/main_light.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizmanager.presenter.QuizListPresenter">
   <top>
      <HBox alignment="CENTER" styleClass="section_title" BorderPane.alignment="CENTER">
         <children>
            <Label text="Twoje Quizy" HBox.hgrow="NEVER">
               <font>
                  <Font name="Lato Medium" size="13.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" visible="false" HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#importQuiz" styleClass="regular_button" text="Importuj" HBox.hgrow="NEVER" />
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" styleClass="scroll_pane" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
